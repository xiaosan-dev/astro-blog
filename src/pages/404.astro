---
import PageLayout from '@/layouts/BaseLayout.astro'
import Button from '@/components/Button.astro'
import { Icon } from 'astro-icon/components'

const meta = {
	description: 'Not found',
	title: '404'
}
---

<PageLayout meta={meta}>
	<div class='px-4 py-10 text-center sm:px-6 lg:px-8'>
		<h1 class='block text-7xl font-bold sm:text-9xl'>404</h1>
		<p class='mt-3 text-muted-foreground'>不晓得啥情况</p>
		<p class=''>页面飞啦.</p>
		<Button title='返回主页' href='/' style='button' class='mt-5'>
			<Icon width={14} height={14} slot='icon-before' name='arrow-left-line' />
		</Button>
	</div>
</PageLayout>
